<Window x:Class="CsfEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CsfEditor"
        Width="450"
        Height="200"
        mc:Ignorable="d"
        Title="红警Csf解析">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="选择csf文件" Width="80"/>
            <TextBox x:Name="src" Width="300"/>
            <Button x:Name="srcBtn" Content="打开" Click="srcBtn_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="选择导出Json" Width="80"/>
            <TextBox x:Name="dest" Width="300"/>
            <Button x:Name="destBtn" Content="打开" Click="destBtn_Click"/>
        </StackPanel>
        <StackPanel>
            <Button Content="执行" Width="100" Click="Button_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</Window>
